<h1>Edit Question</h1>
<div class="col-md-8">
  <%= form_for @question do |f| %>
    <div class="form_group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
    </div>
    <div class="form_group">
      <%= f.label :body %>
      <%= f.text_area :body, row: 8, class: 'form-control', placeholder: "Enter question body" %>
    </div>
    <div class="form-group">
      <%= f.label :resolved, 'Resolved', :value => 'true' %>
      <%= f.radio_button :resolved, 'true', :checked => true %>
      <%= f.label :resolved, 'Non resolved', :value => 'false' %>
      <%= f.radio_button :resolved, 'false' %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
