<h1>All Questions</h1>

<% @questions.each do |question| %>
  <ul>
    <li><%= link_to question.title, question %></li>
    <% if question.resolved == true %>
      <button class="btn btn-success">Resolved</button>
    <% else %>
      <button class="btn btn-danger">Not Resolved</button>
    <% end %>
  </ul>
<% end %>
